@using System
@model ItemViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete an item</h2>

<form asp-route="DeleteItem" method="post" class="form-horizontal" role="form">
    <h4>Are you sure you want to delete this?</h4>
    <hr/>
    <input asp-for="Id" type="hidden"/>
    <div class="form-group">
        <label asp-for="Name" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" readonly/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Description" class="form-control" readonly/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Completed" class="control-label col-md-2"></label>
        <div class="col-md-10">
            @(Model.Completed ? "Yes" : "No")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </div>
</form>

<div>
    @Html.RouteLink("Back to List", "ListItems")
</div>
